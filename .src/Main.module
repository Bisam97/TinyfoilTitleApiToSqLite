Private Function perzent(i As Integer, t As Title)

  Dim ii As Integer
  Dim iii As Integer

  iii = CInt(i / $Titels.Count * 100)

  ' Print t.name & " fertig!"
  Write #File.Out, iii & "%["
  While iii > ii
    Write #File.Out, "#"
    ii += 1

  Wend
  While ii < 100
    Write #File.out, " "
    ii += 1
  Wend
  Write #File.Out, "] (" & i & "/" & $Titels.Count & ")\r"
  Flush #File.Out

End

