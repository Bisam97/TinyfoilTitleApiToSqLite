Private Function getApiJsonandConvert()

  Dim C, cc As Collection
  Dim t As Title

  Print "Get JSON API"

  Shell "wget -q -O - https://tinfoil.media/Title/ApiJson/ > /tmp/tinfoil.json" Wait
  C = JSON.Decode(File.Load("/tmp/tinfoil.json"))

  $Titels = New Title[]
  Print "Parsing JSON"
  For Each cc In C["data"]

    t = New Title(cc["id"], CheckString(String.Mid$(cc["name"], String.InStr(cc["name"], ">") + 1, -4)), CheckString(cc["publisher"]), cc["size"], cc["release_date"], "https://tinfoil.media/i/" & cc["id"] & "/64/64" & String.Mid$(cc["icon"], String.InStr(cc["icon"], "(") + 1 + String.Len("https://tinfoil.media/i/") + 16 + 6, -9))

    $Titels.Add(t)

  Next
  saveFile

End

Private Function updateDatabase()

  Dim sql As SQLRequest
  Dim t As Title
  Dim r As Result
  Dim s As String

  getApiJsonandConvert
  Print "Update Database"
  Print "Please Wait this thake a moment"

  $con.Type = "sqlite3"
  $con.Host = "/usr/lib/hactoolgui"
  $con.Name = "NXTitleDB.sqlite"
  $con.Open()

  For Each t In $Titels

    sql = New SQLRequest($con)
    ' s = sql.Where("id = &1", t.id).Get()

    r = $con.Edit("Title", "Where id = '" & t.id & "'")

    If r.Count = 0 Then

      AddContent(t)

    Else
      r["name"] = t.name
      r.Update()
    Endif

    $f += 1
    perzent($f, t)

  Next

End

Private Function AddContent(t As Title)

  Dim r As Result
  Dim d As String[]
  Dim i As Image

  Shell "wget -q -O - " & t.icon & " > /tmp/icon.tmp" Wait

  d = Split(t.release, "-")

  r = $con.Create("Title")
  r["id"] = t.id
  Try i = Image.Load("/tmp/icon.tmp")

  If Error Then
  Else
    i.Save("/tmp/icon.png")
    r["icon"] = File.Load("/tmp/icon.png")
  Endif

  Try r["name"] = t.name
  Try r["publisher"] = t.publisher
  Try r["release_date"] = Date(d[0], d[1], d[2])
  Try r["size"] = t.Size
  Try r.Update()
  If Error Then

    Print #File.Err, "Error with ID" & t.id
    Error.Clear

  Endif
  $f += 1
  perzent($f, t)

End

